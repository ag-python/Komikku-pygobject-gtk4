<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="ChaptersListRow" parent="GtkListBoxRow">
    <child>
      <object class="GtkBox">
        <property name="margin-start">6</property>
        <property name="margin-end">6</property>
        <property name="spacing">6</property>
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkBox">
            <child>
              <object class="GtkBox">
                <property name="hexpand">1</property>
                <property name="spacing">4</property>
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkLabel" id="title_label">
                    <property name="xalign">0</property>
                    <property name="wrap">1</property>
                    <style>
                      <class name="card-chapter-label"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="scanlators_label">
                    <property name="xalign">0</property>
                    <property name="wrap">1</property>
                    <style>
                      <class name="dim-label"/>
                      <class name="card-chapter-sublabel"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkMenuButton" id="menu_button">
                <property name="has-frame">0</property>
                <property name="focusable">1</property>
                <property name="receives-default">1</property>
                <property name="icon-name">view-more-symbolic</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="spacing">12</property>
            <property name="hexpand">1</property>
            <child>
              <object class="GtkLabel" id="badge_label">
                <property name="halign">start</property>
                <style>
                  <class name="badge"/>
                  <class name="card-chapter-sublabel"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="info_label">
                <property name="halign">start</property>
                <style>
                  <class name="card-chapter-sublabel"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkProgressBar" id="download_progress_progressbar">
                <property name="hexpand">1</property>
                <property name="halign">fill</property>
                <property name="valign">center</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="download_stop_button">
                <property name="focusable">1</property>
                <property name="receives-default">1</property>
                <property name="icon-name">media-playback-stop-symbolic</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="read_progress_label">
                <property name="halign">center</property>
                <style>
                  <class name="card-chapter-sublabel"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <style>
      <class name="card-chapter-listboxrow"/>
    </style>
  </template>
</interface>
