<?xml version="1.0"?>
<interface>
    <requires lib="gtk" version="4.0"/>
    <menu id="menu-card">
        <section>
            <item>
                <attribute name="label" translatable="yes">Delete</attribute>
                <attribute name="action">app.card.delete</attribute>
            </item>
            <item>
                <attribute name="label" translatable="yes">Update</attribute>
                <attribute name="action">app.card.update</attribute>
            </item>
        </section>

        <section>
            <submenu>
                <attribute name="label" translatable="yes">Order of Chapters</attribute>

                <section>
                    <attribute name="id">card-sort-order</attribute>
                    <item>
                        <attribute name="label" translatable="yes">⬆ By Source</attribute>
                        <attribute name="action">app.card.sort-order</attribute>
                        <attribute name="target">desc</attribute>
                    </item>
                    <item>
                        <attribute name="label" translatable="yes">⬇ By Source</attribute>
                        <attribute name="action">app.card.sort-order</attribute>
                        <attribute name="target">asc</attribute>
                    </item>

                    <item>
                        <attribute name="label" translatable="yes">⬆ By Date</attribute>
                        <attribute name="action">app.card.sort-order</attribute>
                        <attribute name="target">date-desc</attribute>
                    </item>
                    <item>
                        <attribute name="label" translatable="yes">⬇ By Date</attribute>
                        <attribute name="action">app.card.sort-order</attribute>
                        <attribute name="target">date-asc</attribute>
                    </item>

                    <item>
                        <attribute name="label" translatable="yes">⬆ By Title</attribute>
                        <attribute name="action">app.card.sort-order</attribute>
                        <attribute name="target">natural-desc</attribute>
                    </item>
                    <item>
                        <attribute name="label" translatable="yes">⬇ By Title</attribute>
                        <attribute name="action">app.card.sort-order</attribute>
                        <attribute name="target">natural-asc</attribute>
                    </item>
                </section>
            </submenu>
        </section>

        <section>
            <item>
                <attribute name="label" translatable="yes">Open in Browser</attribute>
                <attribute name="action">app.card.open-in-browser</attribute>
            </item>
        </section>
    </menu>
</interface>
